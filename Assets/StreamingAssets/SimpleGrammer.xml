<?xml version="1.0" encoding="utf-8" ?>
<grammar xml:lang="en"
        tag-format="semantics/1.0"
        version="1.0"
        xmlns="http://www.w3.org/2001/06/grammar"
        root="mainmenu">
    
    <rule id="mainmenu">
        <one-of>
            <item>
                <ruleref uri = "#play" />
            </item>
            <item>
                <ruleref uri = "#settings" />
            </item>
        </one-of>
    </rule>

    <rule id="play">
        <one-of>
            <item>play</item>
            <item>start</item>
            <item>begin</item>
            <item>play level</item>
        </one-of>
    </rule>

    <rule id="settings">
        <one-of>
            <item>options</item>
            
        </one-of>
    </rule>

</grammar>