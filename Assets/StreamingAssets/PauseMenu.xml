<?xml version="1.0" encoding="utf-8" ?>
<grammar version="1.0" xml:lang="en-US" mode="voice"
root="toplevel" tag-format="semantics/1.0"
xmlns="http://www.w3.org/2001/06/grammar" >



  <rule id="toplevel" scope="public">
    <one-of>
      <item>
        <ruleref uri="#playstate" />
      </item>
    </one-of>
  </rule>
    


  <rule id="playstate">
    <one-of>
      <item>
        <tag>out.action = "new";</tag>
        <one-of>
          <item> Start a new game </item>
          <item> Begin a new game </item>
          <item> New game </item>
          <item> Start New level </item>
          <item> Begin New level </item>
        </one-of>
      </item>
      <item>
        <tag>out.action = "controls";</tag>
        <one-of>
          <item> Open Controls </item>
          <item> Control Settings </item>
        </one-of>
      </item>
      <item>
        <tag>out.action = "quit";</tag>
        <one-of>
          <item> finish the game </item>
          <item> exit game </item>
          <item> quit game </item>
        </one-of>
      </item>
      <item>
        <tag>out.action = "back";</tag>
        <one-of>
          <item> Back to Main Menu </item>
          <item> Back </item>
          <item> Go Back</item>
        </one-of>
      </item>
      
    </one-of>
  </rule>

</grammar>